---
interface ExperienciaItem {
  puesto: string;
  empresa: string;
  periodo: string;
  descripcion: string;
}
const experiencias: ExperienciaItem[] = [
  {
    puesto: 'Desarrollador Interno y Operador de Alta Tensión',
    empresa: 'Red de Energía del Perú',
    periodo: '2023 – Presente',
    descripcion: 'Desarrollo de app móvil en producción (Android/iOS) para avisos, órdenes y planes de trabajo a nivel nacional. Automatización de procesos internos VBS, VBA, Python, Power Apps y Power Automate. Página web para el registro e histórico de equipos y materiales de las subgerencias de transmisión. Mantenimiento, supervisión y monitoreo de la red de transmisión eléctrica en alta tensión (220kV, 60kV, 22.9kV). Uso de equipos M4000, TDR9100, CPC100, TD1, LCM500.',
  },
  {
    puesto: 'Proyectos Universitarios y Freelance',
    empresa: 'UC y Redes sociales',
    periodo: '2024 – Presente',
    descripcion: 'Creación una app de entrenamiento físico personalizado, con chats de usuarios y planes de suscripción. Desarrollo de mi página web personal con para gestión de redes sociales.',
  },
  // agrega más items
];
---
<section id="experiencia" class="py-20 px-6">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-3xl font-semibold mb-8 text-center">Experiencia laboral</h2>
    <div class="space-y-8">
      {experiencias.map(exp => (
        <div class="bg-blue-800/40 p-4 rounded-lg">
          <h3 class="text-2xl font-bold">{exp.puesto}</h3>
          <p class="text-blue-200">{exp.empresa} · {exp.periodo}</p>
          <p class="mt-2 text-sm md:text-base">{exp.descripcion}</p>
        </div>
      ))}
    </div>
  </div>
</section>

