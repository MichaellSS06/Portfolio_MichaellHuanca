---
const navLinks = [
  { label: 'Inicio', href: '#hero' },
  { label: 'Experiencia', href: '#experiencia' },
  { label: 'Proyectos', href: '#proyectos' },
  { label: 'Sobre m√≠', href: '#sobre-mi' },
];
---
<header class="fixed top-0 w-full z-20">
  <nav class="w-full mx-auto container lg:max-w-4xl md:max-w-2xl px-4 py-3 flex justify-between items-center">
    <div class="text-xl font-bold">MichaellSS</div>
    <button id="menu-btn" class="md:hidden text-white text-2xl">‚ò∞</button>
    <ul id="menu" class="hidden md:flex space-x-6 flex-col md:flex-row md:space-x-6 md:static absolute top-16 left-0 w-full md:w-auto bg-blue-900 md:bg-transparent p-4 md:p-0">
      {navLinks.map(link => (
        <li>
            <a href={link.href} class="block py-2 md:py-0 hover:text-red-600 transition hover:border-b-red-600 hover:border-b-2">{link.label}</a>
        </li>
      ))}
    </ul>
  </nav>
</header>
<script>
    // --- Toggle del men√∫ m√≥vil ---
    const menuBtn = document.getElementById('menu-btn');
    const menu = document.getElementById('menu');
    menuBtn?.addEventListener('click', () => menu?.classList.toggle('hidden'));

    // --- Scrollspy para destacar la secci√≥n activa ---
    const sections = document.querySelectorAll('section[id]');
    const navLinks = document.querySelectorAll('nav a');

    window.addEventListener('scroll', () => {
      let current = '';
      sections.forEach(sec => {
        const el = sec as HTMLElement; // üëà conversi√≥n de tipo
        const top = window.scrollY;
        const offset = el.offsetTop - 80;
        const height = el.offsetHeight;
        if (top >= offset && top < offset + height) current = el.getAttribute('id') ?? ''; // üëà usa nullish coalescing
      });
      navLinks.forEach(link => {
        link.classList.remove('text-red-600','border-b-red-600','border-b-2');
        if (link.getAttribute('href') === '#' + current)
          link.classList.add('text-red-600','border-b-red-600','border-b-2');
      });
    });
  </script>
